<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.ui.solicitarmedico.SolicitarMedicoFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/tvSeleccionarSintomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccione_sintomas"
        android:textSize="@dimen/tam_25"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/tvSeleccionarSintomas"
        android:id="@+id/hlSintomas"
        />

    <Spinner
        android:id="@+id/spinner_seleccionar_sintomas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hlSintomas"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btnAgregarSintoma"/>
    <Button
        android:id="@+id/btnAgregarSintoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hlSintomas"
        android:text="@string/agregar"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSiguienteSolicitarMedico"
        android:text="@string/siguiente"
        android:layout_below="@+id/btnAgregarSintoma"/>

    <ListView
        android:id="@+id/lvSintomasIngresadosSolicitarMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSiguienteSolicitarMedico"
        />

</RelativeLayout>